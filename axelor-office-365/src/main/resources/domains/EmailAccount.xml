<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

	<module name="message" package="com.axelor.apps.message.db" />

	<entity name="EmailAccount" lang="java">

		<string name="refreshToken" readonly="true" large="true"/>
		<string name="authenticationUrl" large="true"/>
		<datetime name="lastContactSyncOn" title="Contact sync"/>
		<datetime name="lastCalendarSyncOn" title="Calendar sync"/>
		<datetime name="lastMailSyncOn" title="Mail sync"/>
		<long name="calendarSyncDuration" title="Sync duration (In nanos)"/>

		<many-to-one name="ownerUser" ref="com.axelor.auth.db.User" title="User"/>

		<one-to-many name="contactFolderList" ref="com.axelor.apps.office.db.ContactFolder" mappedBy="emailAccount" orphanRemoval="true"/>
		<one-to-many name="mailFolderList" ref="com.axelor.apps.office.db.MailFolder" mappedBy="emailAccount" orphanRemoval="true"/>

		<extra-code>
      	<![CDATA[
	  		public static final int SERVER_TYPE_OFFICE365 = 4;
	  	]]>
      	</extra-code>

	</entity>

</domain-models>