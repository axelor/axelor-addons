<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<form name="user-form" id="office365-user-form" title="User" model="com.axelor.auth.db.User" extension="true">
		<extend target="//panel-tabs[@name='mainPanelTab']/*[last()]">
			<insert position="after">
				<panel name="office365Panel" title="Office365" showIf="id">
					<field name="officeAccount" domain="self IN :officeAccountList"/>
					<field name="officeAccountList" colSpan="12" domain="self.ownerUser.id = :id" canSelect="true"/>
				</panel>
			</insert>
		</extend>
	</form>

</object-views>