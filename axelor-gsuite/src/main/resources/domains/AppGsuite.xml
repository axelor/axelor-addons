<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd">

	<module name="base" package="com.axelor.apps.base.db"/>

	<entity name="AppGsuite" lang="java" extends="App">
	
		<!-- oauth configuration -->
		<string name="clientId" title="Client ID" encrypted="true"/>
		<string name="clientSecret" title="Client secret" encrypted="true"/>	
		
		<!-- General configuration -->
		<boolean name="isPartnerIncluded" title="Partner ?"/>
		<boolean name="isLeadIncluded" title="Lead ?"/>
		<boolean name="isContactIncluded" title="Contact ?"/>
		
		<!-- Event/Calendar configuration -->
		<boolean name="isEventSyncAllowed" title="Event sync allowed?"/>
		
		<!-- Email configuration -->
		<boolean name="isEmailSyncAllowed" title="Email sync allowed?"/>
		
		<!-- Task configuration -->
		<boolean name="isTaskSyncAllowed" title="Task sync allowed?"/>
		
		<!-- Contact configuration -->
		<boolean name="isContactSyncAllowed" title="Contact sync allowed?"/>
		
	</entity>

</domain-models>
