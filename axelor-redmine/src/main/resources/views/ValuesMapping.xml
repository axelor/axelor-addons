<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid model="com.axelor.apps.redmine.db.ValuesMapping" title="Values mapping"
		name="redmine-values-mapping-grid">

		<field name="selectValueInRedmine" />
		<field name="selectValueInAbs" />

	</grid>

	<form name="redmine-values-mapping-form" title="Values mapping"
		model="com.axelor.apps.redmine.db.ValuesMapping" width="large"
		onNew="redmine-values-mapping-attrs-hide-fields" onLoad="redmine-values-mapping-attrs-hide-fields">

		<panel name="mainPanel">
			<field name="selectValueInRedmine" />
			<field name="selectValueInAbs" hidden="true" />
		</panel>

	</form>

	<action-attrs name="redmine-values-mapping-attrs-hide-fields">
		<attribute name="hidden" for="selectValueInAbs" expr="eval: false"
			if="__parent__?.typeSelectInAbs == 'select'" />
	</action-attrs>

</object-views>
