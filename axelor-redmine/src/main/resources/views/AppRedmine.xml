<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<form name="app-redmine-config-form" title="App Redmine"
		model="com.axelor.apps.base.db.AppRedmine" canDelete="false" canNew="false"
		width="large">
		<panel name="mainPanel">
			<field name="uri" />
			<field name="apiAccessKey" />
		</panel>
		<panel name="fieldsPanel">
			<field name="company" />
		</panel>
		<panel name="redmineCustomFieldConfigPanel" title="Redmine custom field configuration">
			<field name="redmineProjectInvoiceable" />
			<field name="redmineProjectClientPartner" />
			<field name="redmineProjectInvoicingSequenceSelect" />
			<field name="redmineIssueProduct" />
			<field name="redmineIssueIsTaskRefused" />
			<field name="redmineIssueTaskDate" />
			<field name="redmineIssueEstimatedTime" />
			<field name="redmineIssueInvoiced" />
			<field name="redmineIssueAccountedForMaintenance" />
			<field name="redmineTimeSpentProduct" />
			<field name="redmineTimeSpentDurationForCustomer" />
		</panel>
		<panel name="redmineCustomFieldDefaultPanel" title="Redmine custom field defaults">
			<field name="redmineProjectInvoiceableDefault" />
			<field name="redmineProjectClientPartnerDefault" />
			<field name="redmineProjectInvoicingSequenceSelectDefault" />
			<field name="redmineIssueProductDefault" />
			<field name="redmineIssueIsTaskRefusedDefault" />
			<field name="redmineIssueTaskDateDefault" />
			<field name="redmineIssueEstimatedTimeDefault" />
			<field name="redmineIssueInvoicedDefault" />
			<field name="redmineIssueAccountedForMaintenanceDefault" />
			<field name="redmineTimeSpentProductDefault" />
			<field name="redmineTimeSpentDurationForCustomerDefault" />
		</panel>
	</form>

	<action-view name="admin.root.conf.redmine.config" title="Redmine configurations"
		model="com.axelor.apps.redmine.db.RedmineConfig">
		<view type="form" name="redmine-config-form" />
	</action-view>

</object-views>
